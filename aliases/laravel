# Laravel aliases
alias nrd='npm run dev'
alias nrw='npm run watch'
alias artisan='php artisan'
alias art='php artisan'
alias plz='php please'
alias lreset='rm -rf ./vendor && composer install && npm ci && npm run dev'

# Control multiple TMU instances
function tower() {
    php ~/Code/tower/artisan tower:$@
}

# Start a new laravel project with austenc/preset
function newapp() {
    git clone git@github.com:austenc/booster.git ${1:-newapp}
    cd ${1:-newapp}
    rm -rf .git
    composer install
    npm i && npm run dev
    cp .env.example .env
    php artisan key:generate
}

# Open dev setup for the current project / folder
function dev() {
    cd ~/Code/${1:-$PWD} && code .;
    if [ "$2" = "-w" ]; then
        npm run watch
    fi
}

function createdb() {
    mysql -uroot -e "create database if not exists ${1:laravel};"
}