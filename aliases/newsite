function newsite() {
local sitename=${1:-newsite}
local password=${2:-password}
cd ~/Code

expect <<EOD
    spawn statamic new $sitename
    expect "*user?*"
    send "yes\r"
    expect "*>*"
    send "admin\r"
    expect "*>*"
    send "$password\r"
    expect "*>*"
    send "austen.cameron@gmail.com\r"
    expect "*>*"
    send "Austen\r"
    expect "*>*"
    send "Cameron\r"
    expect "*>*"
    send "y\r"
    cd $sitename
    spawn php please clear:site
    expect "*>*"
    send "y\r"
    expect "*>*"
    send "y\r"
    expect "*>*"
    send "y\r"
    expect "*>*"
    send "y\r"
    expect "*>*"
    send "y\r"
    expect "*>*"
    send "n\r"
    interact
EOD

cd $sitename
mv please artisan

# Setup the base theme
cd site/themes && git clone git@github.com:austenc/freebird.git $sitename
cd $sitename && rm -rf .git
rm ./img/freebird.png
mv ./resources/css/freebird.css ./resources/css/$sitename.css
mv ./resources/js/freebird.js ./resources/js/$sitename.js
perl -i -pe "s/freebird/$sitename/g" webpack.mix.js    
perl -i -pe "s/freebird/$sitename/g" .gitignore
perl -i -pe "s/freebird/$sitename/g" meta.yaml

# Build assets and set this theme as default
npm i && npm run dev
echo "theme: $sitename" >> ~/Code/$sitename/site/settings/theming.yaml

# Go to the site directory and open vscode
cd ~/Code/$sitename

## TO DO:
# Install Spock and configure it
# Base gitignore changes 
}
